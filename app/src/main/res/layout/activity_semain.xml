<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SEMainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="无网络情况下查询形近词:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/act_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="请输入你要查询的英文单词" />

        <Button
            android:id="@+id/act_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:text="查询" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/act_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/item_bg"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:gravity="center"
        android:id="@+id/act_result1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/item_bg"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:gravity="center"
        android:id="@+id/act_result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/item_bg"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:gravity="center"
        android:id="@+id/act_result3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/item_bg"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:gravity="center"
        android:id="@+id/act_result4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/item_bg"
        android:textSize="14sp"
        android:visibility="gone" />


    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="有网络情况下查询形近词:"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/act_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="请输入你要查询的英文单词" />

        <Button
            android:id="@+id/act_submit_online"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:text="查询" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_recyler"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</LinearLayout>